<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" type="text/css" href="static/style.css">
    <meta charset="utf-8">
    <title>DTS7 Gallery</title>
  </head>
  <body>
    <div id="main">
      <div id="main-gallery">
        <button id="left" class="btn" type="submit">
          <img class="arrow" src="../assets/arrow.svg" alt="left">
        </button>
        <div id="big-pic">
          <img id="selected" src=<%= pictures[0].path %> alt="Failed to load picture">
        </div>
        <button id="right" class="btn" type="submit">
          <img class="arrow" src="../assets/arrow.svg" alt="right">
        </button>
      </div>
      <div id="sub-gallery">
        <% pictures.forEach((elem, index) => { %>
          <img id=<%= "pic-" + index %> class="thumbnail" src=<%= elem.path %> alt=<%= elem.name %>>
        <% }); %>
      </div>
    </div>
    <script src="static/script.js"></script>
  </body>
</html>
